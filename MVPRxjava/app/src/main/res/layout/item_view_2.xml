<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@drawable/poli">
        <com.example.mvprxjava.view.RoundImageView
            android:layout_weight="1"
            android:id="@+id/imageView_choose"
            android:layout_width="0dp"
            android:src="@mipmap/g7"
            android:layout_marginTop="5dp"
            android:layout_height="90dp" />

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="123"
                android:textColor="@color/black"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/introduction_choose"
                android:text="456"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/link_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="789"
                android:textColor="@color/black"
                android:textSize="20sp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout_hide"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/poli"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image1_choose"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@mipmap/lang"/>
        <TextView
            android:id="@+id/text_choose_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="java"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="28sp"/>
        <ImageView
            android:id="@+id/image2_choose"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@mipmap/start"/>
        <TextView
            android:id="@+id/text_choose_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="725"
            android:textColor="#FFEB3B"
            android:textSize="28sp"/>
        <ImageView
            android:id="@+id/image3_choose"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@mipmap/branch"/>
        <TextView
            android:id="@+id/text_choose_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="1578"
            android:textColor="@android:color/black"
            android:textSize="28sp"/>
    </LinearLayout>

</LinearLayout>